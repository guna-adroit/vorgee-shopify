{% doc %}
  @prompt
    a 404 page template. with 2 buttons, 1 for continue shopping, Other to go to home. And a large sized text saying 404 with some effect

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-404-container-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 60vh;
    padding: 40px 20px;
    text-align: center;
    background-color: {{ block.settings.background_color }};
  }

  .ai-404-number-{{ ai_gen_id }} {
    font-size: {{ block.settings.number_size }}px;
    font-weight: 900;
    color: {{ block.settings.number_color }};
    margin: 0 0 20px 0;
    line-height: 1;
    position: relative;
    text-shadow: 
      0 1px 0 {{ block.settings.shadow_color }},
      0 2px 0 {{ block.settings.shadow_color }},
      0 3px 0 {{ block.settings.shadow_color }},
      0 4px 0 {{ block.settings.shadow_color }},
      0 5px 0 {{ block.settings.shadow_color }},
      0 6px 1px rgba(0, 0, 0, 0.1),
      0 0 5px rgba(0, 0, 0, 0.1),
      0 1px 3px rgba(0, 0, 0, 0.3),
      0 3px 5px rgba(0, 0, 0, 0.2),
      0 5px 10px rgba(0, 0, 0, 0.25);
  }

  .ai-404-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 16px 0;
    font-weight: 600;
  }

  .ai-404-message-{{ ai_gen_id }} {
    font-size: {{ block.settings.message_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 40px 0;
    max-width: 500px;
    opacity: 0.8;
  }

  .ai-404-buttons-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .ai-404-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 28px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 500;
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    transition: all 0.3s ease;
    min-width: 140px;
  }

  .ai-404-button-primary-{{ ai_gen_id }} {
    background-color: {{ block.settings.primary_button_bg }};
    color: {{ block.settings.primary_button_text }};
    border: 2px solid {{ block.settings.primary_button_bg }};
  }

  .ai-404-button-primary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.primary_button_hover_bg }};
    color: {{ block.settings.primary_button_hover_text }};
    border-color: {{ block.settings.primary_button_hover_bg }};
    transform: translateY(-2px);
  }

  .ai-404-button-secondary-{{ ai_gen_id }} {
    background-color: {{ block.settings.secondary_button_bg }};
    color: {{ block.settings.secondary_button_text }};
    border: 2px solid {{ block.settings.secondary_button_border }};
  }

  .ai-404-button-secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.secondary_button_hover_bg }};
    color: {{ block.settings.secondary_button_hover_text }};
    border-color: {{ block.settings.secondary_button_hover_border }};
    transform: translateY(-2px);
  }

  @media screen and (max-width: 768px) {
    .ai-404-number-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.number_size }}px * 0.7);
    }

    .ai-404-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }

    .ai-404-message-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.message_size }}px * 0.9);
    }

    .ai-404-buttons-{{ ai_gen_id }} {
      flex-direction: column;
      width: 100%;
      max-width: 300px;
    }

    .ai-404-button-{{ ai_gen_id }} {
      width: 100%;
    }
  }
{% endstyle %}

<div class="ai-404-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <h1 class="ai-404-number-{{ ai_gen_id }}">404</h1>
  
  {% if block.settings.heading != blank %}
    <h2 class="ai-404-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
  {% endif %}
  
  {% if block.settings.message != blank %}
    <p class="ai-404-message-{{ ai_gen_id }}">{{ block.settings.message }}</p>
  {% endif %}
  
  <div class="ai-404-buttons-{{ ai_gen_id }}">
    <a 
      href="{{ routes.all_products_collection_url }}" 
      class="ai-404-button-{{ ai_gen_id }} ai-404-button-primary-{{ ai_gen_id }}"
    >
      {{ block.settings.continue_shopping_text }}
    </a>
    
    <a 
      href="{{ routes.root_url }}" 
      class="ai-404-button-{{ ai_gen_id }} ai-404-button-secondary-{{ ai_gen_id }}"
    >
      {{ block.settings.home_button_text }}
    </a>
  </div>
</div>

