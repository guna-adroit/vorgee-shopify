      "default": "Go to home"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "number_color",
      "label": "404 number color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "shadow_color",
      "label": "404 shadow color",
      "default": "#cccccc"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#333333"
    },
    {
      "type": "header",
      "content": "Primary button"
    },
    {
      "type": "color",
      "id": "primary_button_bg",
      "label": "Background",
      "default": "#000f9f"
    },
    {
      "type": "color",
      "id": "primary_button_text",
      "label": "Text",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "primary_button_hover_bg",
      "label": "Hover background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "primary_button_hover_text",
      "label": "Hover text",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Secondary button"
    },
    {
      "type": "color",
      "id": "secondary_button_bg",
      "label": "Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "secondary_button_text",
      "label": "Text",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "secondary_button_border",
      "label": "Border",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "secondary_button_hover_bg",
      "label": "Hover background",
      "default": "#f5f5f5"
    },
    {
      "type": "color",
      "id": "secondary_button_hover_text",
      "label": "Hover text",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "secondary_button_hover_border",
      "label": "Hover border",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "number_size",
      "min": 80,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "404 number size",
      "default": 120
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 20,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Heading size",
      "default": 32
