<style>
        
        .collection-banner-links{
            display: flex;
            flex-wrap: nowrap;
            gap: 8px;
            overflow-x: auto;
            scrollbar-width: thin; /* For Firefox */
            -webkit-overflow-scrolling: touch;
            padding-bottom: 12px; /* Create space below content so scrollbar sits lower */
            background-clip: padding-box; /* Ensures background doesnâ€™t cover scrollbar area */
            position: relative;
        }
        .collection-banner-link-item{
            flex: 0 0 auto;
        }
        .collection-banner-link-item a{
            display: block;
            padding: 10px 21px;
            border: 2px solid #fff;
            border-radius: 40px;
            text-decoration: none;
            color: #fff;
            font-weight: 600;
            font-size: 16px;
            line-height: 30px;
            text-align: center;
        }
        .collection-banner-links::-webkit-scrollbar {
            height: 2px; /* Set the height of the scrollbar */
        }

        .collection-banner-links::-webkit-scrollbar-thumb {
           background-color: #000 !important;
           border-radius: 4px;
            -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, .3);
        }
        .collection-banner-links::-webkit-scrollbar-track {
            background-color: #ccc; /* Track background */
        }
        .collection-banner-links::-webkit-scrollbar-button {
            display: none;
        }
        ::-webkit-scrollbar-thumb {
            background-color: #000;
            border-radius: 4px;
            -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, .3);
        }
        ::-webkit-scrollbar-thumb {
            background-color: #ff5e5e; /* Red scrollbar thumb */
            border-radius: 10px;
        }
    </style>
    <div class="collection-banner-links">
        {% for i in (1..4) %}
            {% liquid
                assign button_text_key = 'button_' | append: i | append: '_text'
                assign button_link_key = 'button_' | append: i | append: '_link'
                
                
                assign button_text = block.settings[button_text_key]
                assign button_link = block.settings[button_link_key]
                
                %}
                
                {% if button_text != blank %}
                    <div class="collection-banner-link-item">
                        <a href="{{ button_link }}">{{ button_text }}</a>
                    </div>
                {% endif %}
        {% endfor %}
    </div>

