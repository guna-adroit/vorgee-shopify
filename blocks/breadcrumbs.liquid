{% doc %}
  @prompt
    a breadcrumbs block

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-breadcrumbs-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    font-size: {{ block.settings.font_size }}px;
    color: {{ block.settings.text_color }};
  }

  .ai-breadcrumbs-nav-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: {{ block.settings.separator_spacing }}px;
  }

  .ai-breadcrumbs-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.separator_spacing }}px;
  }

  .ai-breadcrumbs-link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .ai-breadcrumbs-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};text-decoration: {{ block.settings.hover_underline }};
  }

  .ai-breadcrumbs-current-{{ ai_gen_id }} {
    color: {{ block.settings.current_color }};
    font-weight: {{ block.settings.current_font_weight }};
  }

  .ai-breadcrumbs-separator-{{ ai_gen_id }} {
    color: {{ block.settings.separator_color }};
    font-size: {{ block.settings.separator_size }}px;
    user-select: none;
  }

  .ai-breadcrumbs-home-icon-{{ ai_gen_id }} {
    width: {{ block.settings.home_icon_size }}px;
    height: {{ block.settings.home_icon_size }}px;
    fill: currentColor;
  }

  @media screen and (max-width: 749px) {
    .ai-breadcrumbs-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.9 }}px;
      padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;

    }
  }
{% endstyle %}

<div class="ai-breadcrumbs-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <nav class="ai-breadcrumbs-nav-{{ ai_gen_id }}" aria-label="Breadcrumb">
    <div class="ai-breadcrumbs-item-{{ ai_gen_id }}">
      <a href="{{ routes.root_url }}" class="ai-breadcrumbs-link-{{ ai_gen_id }}" aria-label="Home">
        {% if block.settings.show_home_icon %}
          <svg class="ai-breadcrumbs-home-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M3 9L12 2L21 9V20C21 20.5304 20.7893 21.0391 20.4142 21.4142C20.0391 21.7893 19.5304 22 19 22H5C4.46957 22 3.96086 21.7893 3.58579 21.4142C3.21071 21.0391 3 20.5304 3 20V9Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M9 22V12H15V22" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        {% else %}
          {{ block.settings.home_text }}
        {% endif %}
      </a>
    </div>

    {% if template contains 'collection' and collection %}
      <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
      <div class="ai-breadcrumbs-item-{{ ai_gen_id }}">
        <span class="ai-breadcrumbs-current-{{ ai_gen_id }}" aria-current="page">{{ collection.title }}</span>
      </div>
    {% elsif template contains 'product' and product %}
      {% if collection %}
        <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
        <div class="ai-breadcrumbs-item-{{ ai_gen_id }}">
          <a href="{{ collection.url }}" class="ai-breadcrumbs-link-{{ ai_gen_id }}">{{ collection.title }}</a>
        </div>
      {% endif %}
      <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
      <div class="ai-breadcrumbs-item-{{ ai_gen_id }}">
        <span class="ai-breadcrumbs-current-{{ ai_gen_id }}" aria-current="page">{{ product.title }}</span>
      </div>
    {% elsif template contains 'blog' and blog %}
      <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
      <div class="ai-breadcrumbs-item-{{ ai_gen_id }}">
        {% if template contains 'article' %}
          <a href="{{ blog.url }}" class="ai-breadcrumbs-link-{{ ai_gen_id }}">{{ blog.title }}</a>
        {% else %}
          <span class="ai-breadcrumbs-current-{{ ai_gen_id }}" aria-current="page">{{ blog.title }}</span>
        {% endif %}
      </div>
      {% if template contains 'article' and article %}
        <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
        <div class="ai-breadcrumbs-item-{{ ai_gen_id }}">
          <span class="ai-breadcrumbs-current-{{ ai_gen_id }}" aria-current="page">{{ article.title }}</span>
        </div>
      {% endif %}
    {% elsif template contains 'page' and page %}
      <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
      <div class="ai-breadcrumbs-item-{{ ai_gen_id }}">
        <span class="ai-breadcrumbs-current-{{ ai_gen_id }}" aria-current="page">{{ page.title }}</span>
      </div>
    {% elsif template contains 'search' %}
      <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
      <div class="ai-breadcrumbs-item-{{ ai_gen_id }}">
        <span class="ai-breadcrumbs-current-{{ ai_gen_id }}" aria-current="page">Search</span>
      </div>
    {% elsif template contains 'cart' %}
      <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
      <div class="ai-breadcrumbs-item-{{ ai_gen_id }}">
        <span class="ai-breadcrumbs-current-{{ ai_gen_id }}" aria-current="page">Cart</span>
      </div>
    {% elsif template contains 'account' %}
      <span class="ai-breadcrumbs-separator-{{ ai_gen_id }}" aria-hidden="true">{{ block.settings.separator }}</span>
      <div class="ai-breadcrumbs-item-{{ ai_gen_id }}">
        <span class="ai-breadcrumbs-current-{{ ai_gen_id }}" aria-current="page">Account</span>
      </div>
    {% endif %}
  </nav>
</div>

{% schema %}
{
  "name": "Breadcrumbs",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Home Link"
    },
    {
      "type": "checkbox",
      "id": "show_home_icon",
      "label": "Show home icon",
      "default": true
    },
    {
      "type": "text",
      "id": "home_text",
      "label": "Home text",
      "default": "Home"
    },
    {
      "type": "range",
      "id": "home_icon_size",
      "min": 12,
      "max": 24,
      "step": 2,
      "unit": "px",
      "label": "Home icon size",
      "default": 16
    },
    {
      "type": "header",
      "content": "Separator"
    },
    {
      "type": "select",
      "id": "separator",
      "label": "Separator style",
      "options": [
        {
          "value": "/",
          "label": "Slash (/)"
        },
        {
          "value": ">",
          "label": "Greater than (>)"
        },
        {
          "value": "→",
          "label": "Arrow (→)"
        },
        {
          "value": "•",
          "label": "Bullet (•)"
        },
        {
          "value": "|",
          "label": "Pipe (|)"
        }
      ],
      "default": "/"
    },
    {
      "type": "range",
      "id": "separator_spacing",
      "min": 4,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Separator spacing",
      "default": 8
    },
    {
      "type": "range",
      "id": "separator_size",
      "min": 10,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Separator size",
      "default": 14
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 10,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Font size",
      "default": 14
    },
    {
      "type": "select",
      "id": "current_font_weight",
      "label": "Current page font weight",
      "options": [
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semi-bold"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "500"
    },
    {
      "type": "select",
      "id": "hover_underline",
      "label": "Hover underline",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "underline",
          "label": "Underline"
        }
      ],
      "default": "underline"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Link color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "link_hover_color",
      "label": "Link hover color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "current_color",
      "label": "Current page color",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "separator_color",
      "label": "Separator color",
      "default": "#cccccc"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 50,
      "step": 5,
      "unit": "px",
      "label": "Top padding",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 50,
      "step": 5,
      "unit": "px",
      "label": "Bottom padding",
      "default": 20
    } 
  ],
  "presets": [
    {
      "name": "Breadcrumbs"
    }
  ]
}
{% endschema %}