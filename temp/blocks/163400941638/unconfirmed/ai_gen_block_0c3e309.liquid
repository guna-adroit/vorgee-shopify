      <path stroke-linecap="round" stroke-linejoin="round" d="M7.217 10.907a2.25 2.25 0 100 2.186m0-2.186c.18.324.283.696.283 1.093s-.103.77-.283 1.093m0-2.186l9.566-5.314a2.25 2.25 0 103.935 2.186 2.25 2.25 0 00-3.935 2.186l-9.566 5.314m00a2.25 2.25 0 103.933-2.185 2.25 2.25 0 00-3.9332.185zm0 0l9.566 5.314a2.25 2.25 0 103.935-2.186 2.25 2.25 0 00-3.935 2.186l-9.566-5.314z" />
    </svg>
    {% if block.settings.show_text %}
      <span>{{ block.settings.button_text }}</span>
    {% endif %}
  </button>

  <div class="ai-share-dropdown-{{ ai_gen_id }}">
    <div class="ai-share-options-{{ ai_gen_id }}">
