{% doc %}
  @prompt
    A 404 block. With a banner, Showing overlay text '404 page not found' with a description.
    2 buttons  Continue shopping and back to home.
    Option to add overlay to banner to make the 404 text more visible.
    Colors should be adjustable.
    Banner and text should be look neat on mobile, The banner is full width. add a shadow effect to main heading.
    Top and bottom padding should be adjustable

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-404-banner-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    min-height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.top_padding }}px 20px {{ block.settings.bottom_padding }}px;
    overflow: hidden;
  }

  .ai-404-banner-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .ai-404-banner-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }

  .ai-404-banner-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
    opacity: 0.3;
  }

  .ai-404-banner-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
    z-index: 2;
  }

  {% if block.settings.show_overlay %}
    .ai-404-banner-overlay-{{ ai_gen_id }} {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: {{ block.settings.overlay_color }};
      opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
      z-index: 2;
    }
  {% endif %}

  .ai-404-banner-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    text-align: center;
    max-width: 600px;
    width: 100%;
  }

  .ai-404-banner-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px;
    text-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px {{ block.settings.shadow_color }};
    line-height: 1.2;
  }

  .ai-404-banner-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0 0 32px;
    line-height: 1.5;
  }

  .ai-404-banner-buttons-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .ai-404-banner-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 24px;
    border-radius: {{ block.settings.button_border_radius }}px;
    text-decoration: none;
    font-size: 16px;
    font-weight: 500;
    transition: all 0.3s ease;
    min-width: 150px;
  }

  .ai-404-banner-button-primary-{{ ai_gen_id }} {
    background-color: {{ block.settings.primary_button_bg }};
    color: {{ block.settings.primary_button_text }};
    border: 2px solid {{ block.settings.primary_button_bg }};
  }

  .ai-404-banner-button-primary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.primary_button_hover_bg }};
    color: {{ block.settings.primary_button_hover_text }};
    border-color: {{ block.settings.primary_button_hover_bg }};
  }

  .ai-404-banner-button-secondary-{{ ai_gen_id }} {
    background-color: {{ block.settings.secondary_button_bg }};
    color: {{ block.settings.secondary_button_text }};
    border: 2px solid {{ block.settings.secondary_button_border }};
  }

  .ai-404-banner-button-secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.secondary_button_hover_bg }};
    color: {{ block.settings.secondary_button_hover_text }};
    border-color: {{ block.settings.secondary_button_hover_border }};
  }

  @media screen and (max-width: 749px) {
    .ai-404-banner-{{ ai_gen_id }} {
      min-height: 300px;padding: {{ block.settings.top_padding | times: 0.7 }}px 16px {{ block.settings.bottom_padding | times: 0.7 }}px;
    }

    .ai-404-banner-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-404-banner-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
      margin-bottom: 24px;
    }

    .ai-404-banner-buttons-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: center;
    }

    .ai-404-banner-button-{{ ai_gen_id }} {
      width: 100%;
      max-width: 280px;
    }
  }
{% endstyle %}

<div class="ai-404-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.banner_image %}
    <img
      src="{{ block.settings.banner_image | image_url: width: 2000 }}"
      alt="{{ block.settings.banner_image.alt | escape }}"
      class="ai-404-banner-background-{{ ai_gen_id }}"
      loading="lazy"
      width="{{ block.settings.banner_image.width }}"
      height="{{ block.settings.banner_image.height }}"
    >
  {% else %}
    <div class="ai-404-banner-placeholder-{{ ai_gen_id }}">
      {{ 'hero-apparel-1' | placeholder_svg_tag }}<div class="ai-404-banner-empty-state-{{ ai_gen_id }}">
        Add a banner image for your 404 page
      </div>
    </div>
  {% endif %}

  {% if block.settings.show_overlay %}
    <div class="ai-404-banner-overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-404-banner-content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h1 class="ai-404-banner-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
    {% endif %}

    {% if block.settings.description != blank %}
      <div class="ai-404-banner-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
    {% endif %}

    <div class="ai-404-banner-buttons-{{ ai_gen_id }}">
      <a
        href="{{ routes.all_products_collection_url }}"
        class="ai-404-banner-button-{{ ai_gen_id }} ai-404-banner-button-primary-{{ ai_gen_id }}"
      >
        {{ block.settings.continue_shopping_text }}
      </a><a
        href="{{ routes.root_url }}"
        class="ai-404-banner-button-{{ ai_gen_id }} ai-404-banner-button-secondary-{{ ai_gen_id }}"
      >
        {{ block.settings.back_home_text }}
      </a>
    </div>
  </div>
</div>

