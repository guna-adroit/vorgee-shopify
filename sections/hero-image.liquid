<section class="hero-banner" style="
  background-image: 
    linear-gradient(to bottom, {{ section.settings.gradient_color_start }}, {{ section.settings.gradient_color_end }}),
    url({{ section.settings.background_image | image_url: width: 1500 }});
  background-size: cover;
  background-position: center;
">
  <div class="hero-content">
    {% content_for 'blocks' %}
  </div>
</section>

<style>
.hero-banner {
  position: relative;
  padding: 80px 20px 120px;
  color: #fff;
  text-align: center;
  min-height: 500px;
  display: flex;
  align-items: flex-start;
  justify-content: center;
}

.hero-content {
  max-width: 800px;
  margin-top: 40px;
}

.hero-content h1 {
  font-size: 40px;
  font-weight: bold;
  margin-bottom: 10px;
}

.hero-content p {
  font-size: 18px;
  margin-bottom: 20px;
}

.hero-button {
  background-color: #ffffff;
  color: #000;
  padding: 12px 24px;
  border-radius: 4px;
  font-weight: 600;
  text-decoration: none;
  transition: background-color 0.3s;
}

.hero-button:hover {
  background-color: #e5e5e5;
}
</style>

{% schema %}
{
  "name": "Hero Banner",
  "tag": "section",
  "class": "hero-banner-section",
  "blocks": [
    {
      "type": "@theme"
    },
    {
      "type": "text"
    },
    {
      "type": "button"
    },
    {
      "type": "logo"
    },
    {
      "type": "jumbo-text"
    },
    {
      "type": "spacer"
    },
    {
      "type": "group"
    },
    {
      "type": "_marquee"
    }
  ],
  "disabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Our Store"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Shop the latest collection"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "gradient_color_start",
      "label": "Gradient Start Color",
      "alpha": true,
      "default": "#00000026"
    },
    {
      "type": "color",
      "id": "gradient_color_end",
      "label": "Gradient End Color",
      "default": "transparent"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
