
<section class="hero-banner">
  {% if section.settings.background_image %}
    {{ section.settings.background_image | image_url: width: 2000 | image_tag: loading: 'lazy', class: 'hero-banner__img', sizes: 'auto' }}
    <!-- <img 
      src="{{ section.settings.background_image | image_url: width: 2000 }}" 
      alt="{{ section.settings.heading }}" 
      class="hero-banner__img"
    /> -->
  {% endif %}

  <div class="hero-banner__overlay"></div>

  <div class="hero-banner__content">
    {% content_for 'blocks' %}
  </div>
</section>

<style>
.hero-banner {
  position: relative;
  overflow: hidden;
  //min-height: 500px;
}

/* full‚Äêwidth image, behind everything */
.hero-banner__img {
  width: 100%;
  aspect-ratio: revert-layer;
  /* position: absolute;
  top: 0; left: 0;
  width: 100%; height: 100%;
  object-fit: cover;
  z-index: 1; */
}

/* gradient overlay */
.hero-banner__overlay {
  position: absolute;
  top: 0; left: 0;
  width: 100%; height: 100%;
  background: linear-gradient(
    to bottom,
    {{ section.settings.gradient_color_start }},
    {{ section.settings.gradient_color_end }}
  );
  z-index: 2;
}

/* content sits on top */
.hero-banner__content {
  position: relative;
  z-index: 3;
  padding: 40px 20px 0;
  max-width: 800px;
  margin: 0 auto;
  text-align: center;
  color: #fff;
}

/* Heading & subheading */
.hero-banner__content h1 {
  font-size: 3rem;
  margin-bottom: 0.5em;
}

.hero-banner__content p {
  font-size: 1.125rem;
  margin-bottom: 1.5em;
}

/* Button */
.hero-banner__btn {
  display: inline-block;
  padding: 0.75em 1.5em;
  background-color: #fff;
  color: #000;
  border-radius: 4px;
  font-weight: 600;
  text-decoration: none;
  transition: opacity 0.3s;
}

.hero-banner__btn:hover {
  opacity: 0.8;
}

/* Responsive tweaks */
@media (max-width: 768px) {
  .hero-banner__content h1 {
    font-size: 2.25rem;
  }
  .hero-banner__content p {
    font-size: 1rem;
  }
}
</style>


{% schema %}
{
  "name": "Hero Banner",
  "tag": "section",
  "class": "hero-banner-section",
  "blocks": [
    {
      "type": "@theme"
    },
    {
      "type": "text"
    },
    {
      "type": "button"
    },
    {
      "type": "logo"
    },
    {
      "type": "jumbo-text"
    },
    {
      "type": "spacer"
    },
    {
      "type": "group"
    },
    {
      "type": "_marquee"
    }
  ],
  "disabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Our Store"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Shop the latest collection"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "gradient_color_start",
      "label": "Gradient Start Color",
      "alpha": true,
      "default": "rgba(0,0,0,0.6)"
    },
    {
      "type": "color",
      "id": "gradient_color_end",
      "label": "Gradient End Color",
      "alpha": true,
      "default": "rgba(0,0,0,0)"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}


