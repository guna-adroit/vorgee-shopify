<style>
        .vorge-icon-text-wrapper{
            background: #eaeade !important;
        }
        .vorgee-icon-text-container{
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            text-align: center;
            gap: 20px;
            margin-bottom: 40px;
        }
        .vorgee-icon-text-title{
            text-align:center;
            padding: 20px 0;
            max-width: 600px;
            margin: 0 auto;
        }
        .vorgee-icon-text-item{
            text-align: center;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .vorgee-icon-text-item img{
            width: 72px;
            height: 72px;
            object-fit: contain;
            aspect-ratio: unset;
        }
        .vorgee-icon-text-item .placeholder-image{
            width: 72px;
        }
        @media screen and (max-width: 768px){
            .vorgee-icon-text-container{
                display: grid;
                grid-template-columns: repeat(1, 1fr);
            }
        }
    </style>
    <div class="color-{{ section.settings.color_scheme }}">
    <div class="vorgee-icon-text-wrapper section page-width-content " >
        <div class="vorgee-icon-text-title">{{ section.settings.title }}</div>
        <div class="vorgee-icon-text-container">
            {% for block in section.blocks %}
              <div class="vorgee-icon-text-item">
                {% if block.settings.image != blank %}
                  {{ block.settings.image | image_url: width: 250 | image_tag  }}
                {% else %}
                  {{ 'image' | placeholder_svg_tag: 'placeholder-image' }}
                {% endif %}
                
                <p>{{ block.settings.description }}</p>
              </div>
            {% endfor %}
            
        </div>
    </div>
    </div>

{% schema %}
{
  "name": "Icon with Text",
  "class": "section-wrapper",
  "tag": "section",
  "settings": [
    {
        "type": "richtext",
        "id": "title",
        "label": "Title",
        "default": "<h2>Title</h2>"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "scheme-4",
      "label": "t:settings.color_scheme"
    }
  ],
  "blocks": [
    {
        "type": "icon_text",
        "name": "Icon Text",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "textarea",
                "id": "description",
                "label": "Welcome message",
                "default": "Welcome to my shop!"
            }
        ]   
    }
  ],
  "presets": [
    {
        "name": "Icon with Text"
    }
  ]
}
{% endschema %} 